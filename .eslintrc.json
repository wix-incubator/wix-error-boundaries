{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jest/globals": true
	},
	"parserOptions": {
        "ecmaVersion": 2017
    },
	"plugins": ["prettier", "jest"],
	"extends": ["eslint:recommended", "prettier", "plugin:jest/recommended"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"]
	}
}
